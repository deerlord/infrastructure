#!/bin/bash

/usr/sbin/useradd -r -s /sbin/nologin voice
mkdir -p ./.build/voice/
cd ./.build/voice/
cat > Dockerfile <<'EOF'
FROM debian
RUN apt update -y
RUN apt install -y python3.7
RUN apt install -y python3-pip
RUN pip3 install SpeechRecognition
COPY ./app /opt/
CMD ["python3", "/opt/app"]
EOF
docker build -t voice .
cd ../../
rm -rf ./.build/sphinx/
