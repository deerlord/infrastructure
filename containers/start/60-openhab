#!/bin/bash

docker run -d \
  --env USER_ID=$(grep -P '^openhab' /etc/passwd | awk -F':' '{print $3}') \
  --env GROUP_ID=$(grep -P '^openhab' /etc/group | awk -F':' '{print $3}') \
  --restart=always \
  --name=openhab \
  --net=openhab_proxy \
  --env CRYPTO_POLICY='limited' \
  --env JAVA_OPTS='-Dhttp.proxySet=true -Dhttp.proxyHost=http://nginx -Dhttp.proxyPort=8888 -Dhttps.proxyHost=https://nginx -Dhttps.proxyPort=8888 -DsocksProxyHost=nginx -DsocksProxyPort=8888' \
  --env http_proxy='http://nginx:8888' \
  --env https_proxy='https://nginx:8888' \
  -v '/etc/localtime:/etc/localtime:ro' \
  -v '/etc/timezone:/etc/timezone:ro' \
  -v 'openhab_conf:/openhab/conf/' \
  -v 'openhab_userdata:/openhab/userdata/' \
  -v 'openhab_addons:/openhab/addons/' \
  openhab/openhab
